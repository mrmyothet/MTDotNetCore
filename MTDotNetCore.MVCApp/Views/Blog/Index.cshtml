@model List<BlogModel>

@{
    ViewData["Title"] = "Blogs";
    int count = Model.Count;
}
<h2>Blog List</h2>

@* <span>@Model.Count</span> *@

<a class="btn btn-success" href="/Blog/Create">New</a>

<table class="table table-responsive">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th>No.</th>
            <th>Title</th>
            <th>Author</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody>
        @foreach (BlogModel item in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-warning" href="/Blog/Edit/@item.BlogId">Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger" href="/Blog/Delete/@item.BlogId">Delete</a>
                </td>
                <td>@(count--)</td>
                <td>@item.BlogTitle</td>
                <td>@item.BlogAuthor </td>
                <td>@item.BlogContent</td>
            </tr>
        }
    </tbody>
</table>