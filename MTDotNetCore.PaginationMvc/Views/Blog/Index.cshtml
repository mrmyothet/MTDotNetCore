<nav aria-label="...">
    <ul class="pagination">
        @if (pageCount <= 9)
        {
            for (int i = 1; i <= pageCount; i++)
            {
                if (pageNo == i)
                {
                    <li class="page-item active" aria-current="page">
                        <a class="page-link" href="@GetPageUrl(i)">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" href="@GetPageUrl(i)">@i</a>
                    </li>
                }
            }
        }
    </ul>
</nav>