@model MTDotNetCore.MvcChartApp.Models.CanvasJs.LineChartModel;

<h3>
	<a href="https://canvasjs.com/html5-javascript-line-chart/">
		Canvas JS - Line Chart
	</a>
</h3>

<div id="chartContainer" style="height: 370px; width: 100%;"></div>

@section scripts{
    <script>
		window.onload = function () {

			var chart = new CanvasJS.Chart("chartContainer", {
				animationEnabled: true,
				theme: "light2",
				title: {
					text: "Simple Line Chart"
				},
				data: [{
					type: "line",
					indexLabelFontSize: 16,
					dataPoints: @Html.Raw(JsonConvert.SerializeObject(Model.DataList))
				}]
			});
			chart.render();

		}
    </script>
}