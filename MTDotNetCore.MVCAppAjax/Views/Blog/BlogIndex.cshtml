@model List<BlogModel>

@{
    ViewData["Title"] = "Blogs";
    int count = Model.Count;
}
<h2>Blog List</h2>

<a class="btn btn-success" href="/Blog/Create">New</a>

<table class="table table-responsive">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th>No.</th>
            <th>Title</th>
            <th>Author</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody>
        @foreach (BlogModel item in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-warning" href="/Blog/Edit/@item.BlogId">Edit</a>
                </td>
                <td>
                    <button type="button" class="btn btn-danger btn-delete" data-id="@item.BlogId">
                        Delete
                    </button>
                </td>
                <td>@(count--)</td>
                <td>@item.BlogTitle</td>
                <td>@item.BlogAuthor </td>
                <td>@item.BlogContent</td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>

        $('.btn-delete').click(function () {

            const isConfirm = confirm("Are you sure want to delete?");
            if (!isConfirm) return;

            const id = $(this).data('id');

            const _requestModel = {
                BlogId: id
            };

            $.ajax({
                type: 'POST',
                url: '/Blog/Delete',
                data: { blog: _requestModel },
                dataType: "JSON",
                success: function (result) {

                    const message = result.Message;
                    if (!result.IsSuccess) {
                        alert(message);
                        return;
                    }

                    alert(message);
                    location.href = "/Blog/Index";
                },
                error: function (xhr, status, error) {
                    console.log({ xhr, status, error });
                }
            });
        });
    </script>
}